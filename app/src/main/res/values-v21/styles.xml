<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MySwitchStyle" parent="Theme.AppCompat.Light">
        <item name="android:showText">true</item>
        <item name="android:thumbTextPadding">20dp</item>
        <item name="android:thumbTint">@color/colorAccent</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:switchPadding">10dp</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:thumb">@drawable/rectangle</item>
        <item name="android:track">@drawable/track</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/secondary_text</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/secondary_text</item>
        <item name="colorControlActivated">@color/colorAccent</item>

        <item name="android:textColorHighlight">@color/colorAccent</item>
        <item name="android:textColorLink">@color/colorAccent</item>
    </style>
</resources>