   <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/locationLabel"
       android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:id="@+id/tvLocationLabel"
       android:layout_below="@+id/textView"
       android:layout_alignParentStart="true"
       android:layout_marginTop="42dp"
       android:layout_toStartOf="@+id/tvLocationValue" />

    <TextView
        android:id="@+id/tvLocationValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/locationHint"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_above="@+id/tvRSVPLabel"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/tvRSVPDate" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rsvp_date"
        android:id="@+id/tvRSVPLabel"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/tvLocationLabel"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvRSVPDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:inputType="date"
        android:text="Thurs, Oct 13"
        android:layout_alignBaseline="@+id/tvRSVPLabel"
        android:layout_alignBottom="@+id/tvRSVPLabel"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnRespond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:text="@string/rsvp"
        style="@style/NiceButton"
        android:layout_below="@+id/tvRSVPLabel"
        android:layout_alignParentStart="true"
        android:layout_marginTop="65dp" />

