<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <!-- The ActionBar displayed at the top -->
    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dates"
        android:layout_alignBottom="@+id/tvDates"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/tvDates"
        android:id="@+id/textView" />

    <TextView
        android:id="@+id/tvDates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        android:maxLines="2"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="55dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tvCurrentResponse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_response"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvResponse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Not yet responded"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/tvCurrentResponse"
        android:layout_alignBottom="@+id/tvCurrentResponse"
        android:layout_toEndOf="@+id/tvCurrentResponse" />

    <TextView
        android:id="@+id/tvYesCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nYes"
        android:layout_below="@+id/tvCurrentResponse"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/tvDates" />

    <TextView
        android:id="@+id/tvYesVal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2"
        android:textAlignment="center"
        android:layout_below="@+id/tvResponse"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/location"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/textView6"
        android:layout_below="@+id/tvCurrentResponse"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView3"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/tvCurrentResponse" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rsvp_date"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:id="@+id/textView5"
        android:layout_below="@+id/mapView3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp" />

    <TextView
        android:id="@+id/tvRSVPDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:text="Thurs, Oct 13"
        android:layout_toEndOf="@+id/textView"
        android:layout_alignTop="@+id/textView5" />

    <Button
        android:id="@+id/btnRespond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:text="@string/rsvp"
        style="@style/NiceButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="53dp" />



</RelativeLayout>