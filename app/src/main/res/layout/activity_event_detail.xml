<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <!-- The ActionBar displayed at the top -->
    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/include"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvHostLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include"
        android:layout_marginTop="22dp"
        android:text="Event Planned By :"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvHostName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="host name"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_alignBaseline="@+id/tvHostLabel"
        android:layout_alignBottom="@+id/tvHostLabel"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/tvDates" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dates"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/tvDates"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/tvDates" />

    <TextView
           android:id="@+id/tvDates"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:ems="10"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
           android:inputType="textMultiLine"
           android:maxLines="2"
           android:textSize="14sp"
           android:layout_marginTop="26dp"
           android:layout_below="@+id/tvHostName"
           android:layout_alignParentEnd="true"
             android:layout_alignStart="@+id/tvLocationValue" />

